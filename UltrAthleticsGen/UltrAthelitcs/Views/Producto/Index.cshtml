@model IEnumerable<UltrAthelitcs.Models.ProductoViewModel>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container" >

	@foreach (var item in Model)
	{

		<div class="col col-md-4">
			<div class="card" style="border: 1px solid #000; padding: 0.5rem;">
				<img src="../assets/img/proteina.png" class="card-img-top img-thumbnail" alt="...">
				<div class="card-body">
					<h5 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h5>
					<p class="card-text">@Html.DisplayFor(modelItem => item.descripcion)</p>
					<p class="card-text">@Html.DisplayFor(modelItem => item.precio)</p>
					<a href="#" class="btn btn-primary">Comprar</a>
				</div>
			</div>
		</div>
	}
</div>